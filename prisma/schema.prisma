generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Photo {
    id              Int      @id @default(autoincrement())
    descriptionRu   String?
    descriptionEn   String?
    width           Int
    height          Int
    ext             String
    size            Int      @default(0)
}

model Admin {
    id      Int     @id @default(autoincrement())
    login   String  @unique
    salt    String
    hash    String
}

model CookiePassword {
    id          Int        @id @default(autoincrement())
    value       String
    createdAt   DateTime   @default(now())
}

// The model is not currently in use
model Text {
    id      String  @id
    value   String
}
